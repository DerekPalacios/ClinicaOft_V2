@model IEnumerable<Capa_Logica_Negocio.Models.ClienteModel>

@{
    ViewData["Title"] = "MainIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="containerCustom">
    <div class="grid-c-x2">

        @* Menu Lateral*@
        <aside class="sideBar">
            <ul class="sideBarUL">
                <li>
                    <button type="button" class="btnSideBar">
                        Clientes

                    </button>
                </li>

                <li>
                    <button class="btnSideBar">
                        Cuentas

                    </button>
                </li>

                <li>
                    <button class="btnSideBar">
                        Historial de Cuentas
                    </button>
                </li>
            </ul>
        </aside>

        <div class="container-fluid">
            <div class="row mt-2">
                <div class="col-sm-6">
                    <h3>Lista de Clientes Ingresados</h3>
                </div>
                <div class="col-sm-2">
                    <a class="btn btn-success d-block" data-toggle="modal" data-target="#clienteModal" @*asp-action="Create" asp-controller="ClienteMainView"*@>Nuevo Cliente</a>
                </div>
            </div>

            @*Modal*@
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="row">
                                    <div class="form-group col-lg-6">
                                        <label asp-for="Nombres_Cliente" class="control-label"></label>
                                        <input asp-for="Nombres_Cliente" class="form-control" />
                                        <span asp-validation-for="Nombres_Cliente" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <label asp-for="Apellidos_Cliente" class="control-label"></label>
                                        <input asp-for="Apellidos_Cliente" class="form-control" />
                                        <span asp-validation-for="Apellidos_Cliente" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-lg-6">
                                        <label asp-for="Telefono_Cliente" class="control-label"></label>
                                        <input asp-for="Telefono_Cliente" class="form-control" />
                                        <span asp-validation-for="Telefono_Cliente" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <label asp-for="Direccion_Cliente" class="control-label"></label>
                                        <input asp-for="Direccion_Cliente" class="form-control" />
                                        <span asp-validation-for="Direccion_Cliente" class="text-danger"></span>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <input type="submit" value="Create" class="btn btn-primary"/>
                        </div>
                    </div>
                </div>
            </div>

            <br />
            <div class="row w-100 h-75 overflow-auto  m-auto">
                @if (Model.Count() > 0)
                {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombres_Cliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Apellidos_Cliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telefono_Cliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Direccion_Cliente)
                            </th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombres_Cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellidos_Cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono_Cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Direccion_Cliente)
                            </td>
                            <td>
                                <a asp-controller="ClienteMainView" class=" text-decoration-none" asp-action="Edit" asp-route-id="@item.Id_Cliente">
                                    <img src="~/src/pencil.svg" alt="del-img-trash" class="editPencil" />
                                </a> |
                                <a asp-action="Delete" class=" text-decoration-none" asp-route-id="@item.Id_Cliente">
                                    <img src="~/src/trash.svg" alt="edit-img-pencil" class="deleteTrash" />
                                </a>
                            </td>
                        </tr>
                            }
                    </tbody>
                </table>
                }
                else
                {
                <div class="alert alert-warning " role="alert">
                    <h4 class="alert-heading">Base de Datos Vacia!</h4>
                    <p>Los clientes ingresados se visualizar&aacute;n aqu&iacute;</p>
                </div>
                }
            </div>



            <div class="container-fluid">
                <div class="row mt-2">
                    <div class="col-sm-6">
                        <h3>Cuentas</h3>
                    </div>
                    <div class="col-sm-2">
                        <a class="btn btn-success d-block">Crear Cuenta</a>
                    </div>
                </div>

                <div>




                </div>




            </div>





        </div>

                    </div>



                </div>
