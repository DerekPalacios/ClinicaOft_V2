@model Capa_Logica_Negocio.Models.ClienteModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

        <div  style="margin-top:90px" class="containerCustom">
            <br />
            <div class="row">
                <div class="col-sm-2">
                    <a class="btn btn-success d-block" asp-action="Create" asp-controller="ClienteMainView">Agregar Nuevo Cliente</a>
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nombres_Cliente" class="control-label"></label>
                            <input asp-for="Nombres_Cliente" class="form-control" />
                            <span asp-validation-for="Nombres_Cliente" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Apellidos_Cliente" class="control-label"></label>
                            <input asp-for="Apellidos_Cliente" class="form-control" />
                            <span asp-validation-for="Apellidos_Cliente" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Telefono_Cliente" class="control-label"></label>
                            <input asp-for="Telefono_Cliente" class="form-control" />
                            <span asp-validation-for="Telefono_Cliente" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Direccion_Cliente" class="control-label"></label>
                            <input asp-for="Direccion_Cliente" class="form-control" />
                            <span asp-validation-for="Direccion_Cliente" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" /> |
                        <a asp-controller="ClienteMainView" asp-action="MainIndex">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

   
