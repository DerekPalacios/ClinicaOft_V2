@model Capa_Logica_Negocio.Models.OftalmologoModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:90px" class="containerCustom">
    <br />
    <div class="row">
        <div class="col-sm-2">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="OftalmologoMainView">Agregar Nuevo Oftalmologo</a>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-4">
            <form asp-controller="OftalmologoMainView" asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombres_Oftalmologo" class="control-label"></label>
                    <input asp-for="Nombres_Oftalmologo" class="form-control" />
                    <span asp-validation-for="Nombres_Oftalmologo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Apellidos_Oftalmologo" class="control-label"></label>
                    <input asp-for="Apellidos_Oftalmologo" class="form-control" />
                    <span asp-validation-for="Apellidos_Oftalmologo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Edad_Oftalmologo" class="control-label"></label>
                    <input asp-for="Edad_Oftalmologo" class="form-control" />
                    <span asp-validation-for="Edad_Oftalmologo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefono_Oftalmologo" class="control-label"></label>
                    <input asp-for="Telefono_Oftalmologo" class="form-control" />
                    <span asp-validation-for="Telefono_Oftalmologo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Direccion_Oftalmologo" class="control-label"></label>
                    <input asp-for="Direccion_Oftalmologo" class="form-control" />
                    <span asp-validation-for="Direccion_Oftalmologo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Especialidad_Oftalmologo" class="control-label"></label>
                    <input asp-for="Especialidad_Oftalmologo" class="form-control" />
                    <span asp-validation-for="Especialidad_Oftalmologo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" /> |
                    <a asp-controller="OftalmologoMainView" asp-action="MainIndex">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>


