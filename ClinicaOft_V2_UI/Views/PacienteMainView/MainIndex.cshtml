@model IEnumerable<Capa_Logica_Negocio.Models.PacienteModel>

@{
    ViewData["Title"] = "MainIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="containerCustom">



    @* Menu Lateral*@
    <aside class="sideBar">
        <ul class="sideBarUL">
            <li>
                <a type="button" href="#headClientes">
                    Clientes
                </a>
            </li>
            <li>
                <a type="button" href="#headClientes">
                    Clientes
                </a>
            </li>
            <li>
                <a type="button" href="#headClientes">
                    Clientes
                </a>
            </li>
        </ul>
    </aside>

    <div class="Container-fluid">
        <div id="headClientes" style="height:90px;"></div> @*esto es para que se ubique bien la primer etiqueta*@

        <div class="row mt-2">
            <div class="col-sm-6">
                <h3>Lista de Pacientes Ingresados</h3>
            </div>
            <div class="col-sm-2">
                <a class="btn btn-success d-block" asp-action="CreatePaciente" asp-controller="PacienteMainView">Nuevo Paciente</a>
            </div>

        </div>


        <div style="max-height:700px" class="row w-100 h-75 overflow-auto  m-auto">
            @if (Model.Count() > 0)
            {
                <table class="table table-hover">
                    <thead class="sticky-top " style="background:#fff">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombres_Paciente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Apellidos_Paciente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Edad_Paciente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telefono_Paciente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Direccion_Paciente)
                            </th>
                            <th>Opciones</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombres_Paciente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Apellidos_Paciente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Edad_Paciente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefono_Paciente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Direccion_Paciente)
                                </td>
                                <td>

                                    <a asp-controller="PacienteMainView" asp-action="EditPaciente" class=" text-decoration-none" asp-route-id="@item.Id_Paciente">
                                        <img src="~/src/pencil.svg" alt="del-img-trash" class="editPencil" />
                                    </a> |
                                    <a asp-controller="PacienteMainView" asp-action="DeletePaciente" class=" text-decoration-none" asp-route-id="@item.Id_Paciente">
                                        <img src="~/src/trash.svg" alt="edit-img-pencil" class="deleteTrash" />
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning " role="alert">
                    <h4 class="alert-heading">Base de Datos Vacia!</h4>
                    <p>Los clientes ingresados se visualizar&aacute;n aqu&iacute;</p>
                </div>
            }



        </div>


    </div>







</div>
