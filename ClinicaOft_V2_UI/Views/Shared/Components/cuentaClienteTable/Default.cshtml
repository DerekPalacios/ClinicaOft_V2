@model IEnumerable<Capa_Logica_Negocio.Models.CuentaClienteModel>

<div class="card">

    <div class="card-header">
        <div class="row  mx-auto">

            <div class="col-2">
                @Html.DisplayNameFor(model => model.Saldo_Cuenta)
            </div>
            <div class="col-2">

                @Html.DisplayNameFor(model => model.Fecha_Cuenta)
            </div>
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Fecha_Cancelacion_Cuenta)

            </div>
            <div class="col-2">
                @Html.DisplayNameFor(model => model.Saldada)

            </div>            
            <div class="col-2">
                @Html.DisplayNameFor(model => model.Cliente)

            </div>

        </div>
    </div>
    <div class="card-body ">
        <div class="accordion" id="cuentaColapse">
            @foreach (var item in Model)
            {

                <div class="row user-select-none" style="cursor:pointer"  data-toggle="collapse" data-target="#colapseFile-@item.Id_Cuenta.ToString()" aria-expanded="true" aria-controls="colapseFile-@item.Id_Cuenta.ToString()">
                    <div class="row selHover mx-auto">

                        <div class="col-2">
                            @Html.DisplayFor(modelItem => item.Saldo_Cuenta)
                        </div>
                        <div class="col-2">
                            @Html.DisplayFor(modelItem => item.Fecha_Cuenta)
                        </div>
                        <div class="col-4">
                            @Html.DisplayFor(modelItem => item.Fecha_Cancelacion_Cuenta)
                        </div>
                        <div class="col-2">
                            @Html.DisplayFor(modelItem => item.Saldada)
                        </div>
                        <div class="col-2">
                            @Html.DisplayFor(modelItem => item.IdCliente_Cuenta)
                        </div>
                    </div>

                </div>
                <div id="colapseFile-@item.Id_Cuenta.ToString()" class="collapse" data-parent="#cuentaColapse">
                    <div class="card-body">
                        y aca va el texto, supongo
                    </div>
                </div>
            }
        </div>

    </div>

</div>


